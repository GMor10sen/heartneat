<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Welcome to Heartneat Home Page</title>
    <link rel="stylesheet" href="./css/home.css" />
    <link rel="stylesheet" href="/css/menu.css" />
    <link rel="stylesheet" href="/css/buttons.css" />
  </head>
  <body>
    <div class="Menu">
      <h2 style="font-size: 35px">MENU</h2>
      <div id="myLinks">
        <p class="Menu_Option">How Much Information Would You Like?</p>
        <input type="radio" id="Little" name="info_amount" value="30" />
        <label for="Little">A Little Bit</label><br />
        <input type="radio" id="Medium" name="info_amount" value="60" />
        <label for="Medium">A Medium Amount</label><br />
        <input type="radio" id="Lot" name="info_amount" value="100" />
        <label for="Lot">A Lot of Information</label><br /><br />

        <label class="switch">
          <label for="checkbox"></label>
          <input type="checkbox" />
          <span class="slider_switch"></span>
        </label>

        <p>Turn Off Animations</p>
        <label class="switch">
          <label for="checkbox"></label>
          <input type="checkbox" id="vibration_switch" />
          <span class="slider_switch"></span>
        </label>

        <p>Replace Vibration with Sound</p>
        <label class="switch">
          <label for="checkbox"></label>
          <input type="checkbox" />
          <span class="slider_switch"></span>
        </label>
        <p>Include Animal Information</p>
      </div>
      <!-- Hamburger Menu -->
      <ul class="w3-ul">
        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
          <li class="w3-xxlarge"><i class="fa fa-bars"></i></li>
        </a>
      </ul>
    </div>

    <div class="Button_Options">
      <a href="/home/index">
        <img class="Picture_Frame_Medium" src="./images/Plus.png" alt="" />
      </a>
      <a href="/home/quiz">
        <img
          class="Picture_Frame_Medium"
          src="./images/question.png"
          href="index_quiz.ejs"
          alt=""
        />
      </a>
    </div>
    <div class="imageShow" id="sliderImages">
      <img src="./images/heart.png" alt="" class="center">
      <img src="./images/Plus.png" alt="" class="center" style="display: none;">
      <img src="./images/question.png" alt="" class="center" style="display: none;">
      <img src="./images/whale.png" alt="" class="center" style="display: none;">
    </div><br>
    <p>Current BPM: <span id="BPM_Val"></span></p>
    <div class="Slider_Container">
      <input
        type="range"
        min="0"
        max="1200"
        value="60"
        class="slider"
        id="BPM_Range"
      />
    </div>
    <div class="number_input">
      <label for="BPM_Custom">Input Custom BPM:</label>
      <input
        type="number"
        id="BPM_Custom"
        name="BPM_Custom"
        min="0"
        max="1200"
        value="60"
      />
    </div>
